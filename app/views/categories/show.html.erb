<div class="category-show">
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>
<p>
  <strong>Title:</strong>
  <%= @category.title %>
</p>
<div class="links">
  <%= link_to 'Edit', edit_category_path(@category) %> |
  <%= link_to 'Delete', category_path, method: :delete %> |
  <%= link_to 'Tasks', category_tasks_path(@category) %>
</div>
<br>
<% @category.tasks.each do |task| %>
  <%= task.title %>
  <%= task.body %><br>
<% end %>
<%= link_to "New Task", new_category_task_path(@category) %>

<% content_for :sidebar do %>
  <% render 'layouts/sidebar', categories: @categories %>
<% end %>
</div>